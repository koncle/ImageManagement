<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.koncle.imagemanagement">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="f58035457ccc153e5f24ff0195e4c750" />

        <service
            android:name=".service.ImageListenerService"
            android:enabled="true" />

        <activity
            android:name="com.koncle.imagemanagement.activity.DrawerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.MapActivity" />
        <activity android:name=".activity.MultiColumnImagesActivity" />
        <activity android:name=".activity.RemarkActivity" />
        <activity android:name=".activity.SelectImageActivity" />
        <activity android:name=".activity.SingleImageActivity" />

        <service
            android:name=".service.ImageListenerService"
            android:enabled="true" />

    </application>

</manifest>