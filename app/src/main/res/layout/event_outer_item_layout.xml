<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="10dp"

    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp"

    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_alignParentStart="true" />


            <ImageButton
                android:id="@+id/event_delete"
                android:src="@drawable/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="#fff"
                android:layout_toStartOf="@+id/event_add_image"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:contentDescription="@string/delete_image_desc" />

            <ImageButton
                android:id="@+id/event_add_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#fff"
                android:clickable="true"
                android:contentDescription="@string/add_image_desc"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/add" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/event_outer_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>
