<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_image_toolbar"
        style="@style/toolbarStyle">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/image_select_spinner"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:spinnerMode="dialog"
            android:dropDownWidth="1000dp"
            android:dropDownVerticalOffset="10dp"
            android:dropDownHorizontalOffset="10dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_select_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/image_select_show"
            style="@style/dialog_bottom_button"
            android:text="All"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/image_select_finish"
            android:text="Finish"
            style="@style/dialog_bottom_button"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>